<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_height="match_parent"
    android:layout_width="match_parent" >

<RelativeLayout
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_alignParentTop="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <!--<Button-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="120dp"-->
            <!--android:layout_weight="1"-->
            <!--android:text="X"-->
            <!--android:background="@drawable/nope"/>-->
        <ImageButton
            android:id="@+id/btnNope"
            android:src="@drawable/nope"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"/>

        <ImageButton
            android:id="@+id/btnInfo"
            android:src="@drawable/info"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical"/>

        <ImageButton
            android:id="@+id/btnYeah"
            android:src="@drawable/yeah"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:background="@null"
            android:scaleType="fitCenter"/>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>

<LinearLayout
    android:layout_width="280dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="start">

    <RelativeLayout android:id="@+id/rlProfileBox"
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:background="@color/orange_main">

        <!--<ImageView-->
            <!--android:id="@+id/profile_background"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:layout_centerInParent="true"-->
            <!--android:scaleType="centerCrop"/>-->

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:adjustViewBounds="true"
            android:layout_alignParentLeft="true"
            android:src="@drawable/rabbit_profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_below="@+id/ivProfileImage"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Steven Raden"/>

    </RelativeLayout>

    <ListView android:id="@+id/lvNavDrawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#fff"/>

</LinearLayout>
</android.support.v4.widget.DrawerLayout>